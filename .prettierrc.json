{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "endOfLine": "lf",
  "printWidth": 80,
  "useTabs": false,
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.(yaml|yml)"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
