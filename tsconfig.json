{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "lib": ["ESNext"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true
  },
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
